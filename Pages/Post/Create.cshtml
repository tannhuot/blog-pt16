@page
@model blog_pt16.Pages.Post.CreateModel
@{
	ViewData["Title"] = "Create";
}

<div class="container my-5">
    <div class="row">
        <div class="d-flex justify-content-between mb-2">
            <h3>Create Post</h3>
            <a class="btn btn-success" asp-page="/post/index" role="button">Back</a>
        </div>
        <!-- Blog entries-->
        <div class="col-lg-12">
            <div class="card p-3">
                <div asp-validation-summary="All"></div>
                <form method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label asp-for="Post.Title" class="form-label">Title</label>
                        <input type="text"
                               class="form-control"
                               asp-for="Post.Title" />
                        <span class="invalid-feedback" asp-validation-for="Post.Title"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Post.Content" class="form-label">Content</label>
                        <textarea class="form-control"
                                  asp-for="Post.Content"
                                  rows="5"></textarea>
                        <span class="invalid-feedback" asp-validation-for="Post.Content"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Post.ImageFile" class="form-label">Choose Thumbnail</label>
                        <input class="form-control"
                               type="file"
                               accept="image/*"
                               asp-for="Post.ImageFile" />
                       <img id="previewImage" src="#" style="display:none; width: 150px; margin-top: 20px"/>
                    </div>
                    <div class="mb-3">
                        <label asp-for="SelectedCategory" class="form-label">Category</label>
                        <select asp-for="SelectedCategory"
                                asp-items="Model.CategoryItems" class="form-select">
                            <option selected>Select Category</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Tag</label>
                        <div class="tag-wrapper">
                            @foreach(var item in Model.Tags) {
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           id="cb-@item.Id"
                                           name="SelectedTagIds"
                                           value="@item.Id"
                                           checked="@item.IsSelected"/>
                                    <label class="form-check-label" for="cb-@item.Id">@item.Name</label>
                                </div>
                            }
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(".input-validation-error").addClass("is-invalid");
        // Post_ImageFile/
        
        $("#Post_ImageFile").change((e) => {
            var input = e.currentTarget;
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    console.log("ok");
                    var preview = document.getElementById("previewImage");
                    preview.src = e.target.result;
                    preview.style.display = "block";
                };
                reader.readAsDataURL(input.files[0]);
            };
        });
    </script>
}