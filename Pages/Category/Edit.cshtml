@page
@model blog_pt16.Pages.Category.EditModel
@{
    ViewData["Title"] = "Edit";
}

<div class="container my-5">
    <div class="row">
        <div class="d-flex justify-content-between mb-2">
            <h3>Edit Category</h3>
            <a class="btn btn-success" asp-page="/category/index" role="button">Back</a>
        </div>
        <!-- Blog entries-->
        <div class="col-lg-12">
            <div class="card p-3">
                <form method="POST">
                    <div class="mb-3">
                        <input type="hidden" asp-for="CategoryModel.Id" />
                        <label asp-for="CategoryModel.Name" class="form-label">Category</label>
                        <input type="text" class="form-control" asp-for="CategoryModel.Name" />
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
